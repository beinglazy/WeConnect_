<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/tvConfirmSignout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signout?"
            android:textColor="@color/black"
            android:textSize="40sp"/>
        <Button
            android:id="@+id/btnConfirmSignout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvConfirmSignout"
            android:layout_marginTop="25dp"
            android:text="Sign Out"
            android:textColor="@color/black"
            android:background="@drawable/white_rounded_button"/>

    </RelativeLayout>
    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:id="@+id/signoutProgressBar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signing Out......"
        android:textColor="@color/black"
        android:layout_below="@id/signoutProgressBar"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvsigningout"
        android:textSize="20sp"/>

</RelativeLayout>